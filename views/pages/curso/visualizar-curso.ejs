<div id='curso-visualizacao' class="mt-2">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/curso">Curso</a></li>
                <li class="breadcrumb-item active" aria-current="page">Visualizar dados do curso</li>
            </ol>
        </nav>

        <h2>Informações do curso</h2>

        <form action="/curso" method="post" class="mt2">
            <div class="form-group">
                <label for="sigla">Sigla</label>
                <input type="text" id="sigla" name="sigla" class="form-control" placeholder="IE07" value="<%= sigla %>"
                    readonly>
            </div>
            <div class="form-group">
                <label for="nome">Nome do curso</label>
                <input type="text" id="nome" name='nome' class="form-control" placeholder="Ciência da Computação"
                    value="<%= nome %>"" required readonly>
            </div>
            <div class=" form-group">
                <label for="desc">Descrição</label>
                <textarea id="desc" class="form-control" name="descricao" cols="30" rows="5"
                    readonly><%= descricao %></textarea>
            </div>
        </form>

    </div>
</div>