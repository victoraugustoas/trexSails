<div id='curso-create' class="mt-2">
    <div class="container">

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/curso">Curso</a></li>
                <li class="breadcrumb-item active" aria-current="page">Criar curso</li>
            </ol>
        </nav>

        <h2>Criar Curso</h2>

        <form action="/curso" method="post" class="mt2">
            <div class="form-group">
                <label for="sigla">Sigla</label>
                <input type="text" id="sigla" name="sigla" class="form-control" placeholder="IE07" required>
            </div>
            <div class="form-group">
                <label for="nome">Nome do curso</label>
                <input type="text" id="nome" name='nome' class="form-control" placeholder="Ciência da Computação" required>
            </div>
            <div class="form-group">
                <label for="desc">Descrição</label>
                <textarea id="desc" class="form-control" name="descricao" cols="30" rows="5"></textarea>
            </div>
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <input type="submit" class="btn btn-success" value="Salvar">
        </form>

    </div>
</div>