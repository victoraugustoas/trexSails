<div id='selecionar-curso'>
    <div class="container mt-4">
        <div class="row">
            <h1>Selecionar curso</h1>
        </div>
        <hr />
        <div class="row">
            <h4>Seu curso atual Ã©:</h4>
        </div>
        <div class="row">
            <div class="alert alert-primary" role="alert">
                <%= nomeCursoAtual %>
            </div>
        </div>
        <hr />
        <div class="row">
            <p>Por favor, selecione seu curso na UFAM:</p>
        </div>
        <div class="row">
            <form action="/account/curso" method="POST">
                <input type="hidden" name="_csrf" value="<%= _csrf%>">
                <div class="form-group">
                    <select class="custom-select" name="select">
                        <% cursos.forEach((ele)=> {%>
                        <option><%= ele.nome %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <a href="/account" class="btn btn-outline-info">Cancelar</a>
                    <input type="submit" class="btn btn-dark">
                </div>
            </form>
        </div>
    </div>
</div>